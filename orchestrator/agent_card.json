{
  "name": "sns-orchestrator",
  "description": "SNS運用を統括し、各プラットフォーム専門エージェントにタスクを振り分けます",
  "url": "http://localhost:8080",
  "version": "1.0.0",
  "provider": {
    "organization": "Markx"
  },
  "capabilities": {
    "streaming": false,
    "pushNotifications": false,
    "stateTransitionHistory": true
  },
  "authentication": {
    "schemes": []
  },
  "skills": [
    {
      "id": "sns-strategy",
      "name": "SNS戦略立案",
      "description": "SNS横断でのコンテンツ戦略を立案します",
      "tags": ["strategy", "planning", "sns"],
      "examples": [
        "新商品のSNS展開戦略を考えて",
        "来月のSNSコンテンツカレンダーを作成して"
      ]
    },
    {
      "id": "task-routing",
      "name": "タスク振り分け",
      "description": "適切な専門エージェントにタスクを振り分けます",
      "tags": ["orchestration", "routing"],
      "examples": [
        "YouTube動画を作りたい",
        "Xで告知したい"
      ]
    },
    {
      "id": "youtube-coordination",
      "name": "YouTube運用統括",
      "description": "YouTube関連の制作タスクを統括します",
      "tags": ["youtube", "video", "coordination"],
      "examples": [
        "YouTube動画の企画から公開まで進めて",
        "Shortsを量産したい"
      ]
    }
  ],
  "defaultInputModes": ["text"],
  "defaultOutputModes": ["text"]
}
